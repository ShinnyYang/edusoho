{% set classroom = classroom|wrap('classroom.price') %}

{% if classroom.hidePrice != '1' %}
  <span class="pull-right">
    <span class="
      {% if classroom.price == 0 %}
            color-success
      {% else %}
            color-danger
      {% endif %}">
      {{ classroom.priceWrapper.priceText }}
    </span>
  </span>
{% endif %}
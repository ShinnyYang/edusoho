{% extends 'layout.html.twig' %}

{% do script(['libs/vue.js', 'app/js/question-manage/preview/index.js']) %}

{% block title %}{{'course.question_manage.preview'|trans}}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {% if maincolor != 'default' and setting('theme.code', 'jianmo') == 'jianmo' %}
    <link href="{{ asset('static-dist/app/css/item-bank-' ~ maincolor ~ '.css') }}" rel="stylesheet" />
    <link href="{{ asset('static-dist/app/css/item-bank-antdv-' ~ maincolor ~ '.css') }}" rel="stylesheet" />
  {% else %}
    <link href="{{ asset('static-dist/app/css/item-bank.css') }}" rel="stylesheet" />
    <link href="{{ asset('static-dist/app/css/item-bank-antdv.css') }}" rel="stylesheet" />
  {% endif %}
{% endblock %}

{% block body %}
  {% verbatim %}
    <div id="app">
    </div>
  {% endverbatim %}

  <input type="hidden" name="item" value="{{ item|json_encode }}">
  <input type="hidden" name="question_bank_attachment_setting" value="{{ setting('question_bank_attachment_setting')|json_encode }}">
  {% include 'attachment-upload/upload-data.html.twig'  %}
{% endblock %}

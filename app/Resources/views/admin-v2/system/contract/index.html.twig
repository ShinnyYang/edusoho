{% extends 'admin-v2/content-layout.html.twig' %}

{% do script([ 'vue3/js/contract/index.js']) %}

{% set menu = 'admin_v2_contract_manage' %}

{% block main %}
  {% if cloudStatus() %}
    <div id="app"></div>
    <input type="hidden" id="ckeditor_image_upload_url" value="{{ path('editor_upload', {token: upload_token('question')}) }}">
    <input type="hidden" id="ckeditor_image_download_url" value="{{ path('editor_download', {token: upload_token('question')}) }}">
  {% else %}
    <div style="width: 100%; text-align: center;padding:24px;">
      <a href="{{ path('admin_v2_my_cloud_overview') }}" style="display: inline-block; width: 100%;">
        <img src="{{ asset('/static-dist/app/img/admin-v2/contract-background.png') }}" alt="Contract Background" style="width: 100%; height: auto; display: block;">
      </a>
    </div>
  {% endif %}

  <script src="{{ asset('/static-dist/libs/es-ckeditor/ckeditor.js') }}"></script>
{% endblock %}

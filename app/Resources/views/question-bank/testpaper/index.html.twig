{% extends 'my/my-teaching.html.twig' %}

{% block title %}{{ 'my.teaching.question_bank.testpaper.manage'|trans }} - {{ parent() }}{% endblock %}

{% do css(['app/css/main-ant.css']) %}

{% block meta %}
  {{ parent() }}
  <meta name="lavalamp-enable" content="0"/>
{% endblock %}

{% set side_nav = 'my-question-bank' %}
{% set active_tab = 'testpaper-list' %}

{% do script(['app/js/question-bank/testpaper/index.js'])  %}

{% block main %}
  <div class="panel panel-default panel-col">
    <div class="question-bank-heading">{{ questionBank.name }}</div>
  </div>

  <div>
    {% include 'question-bank/header-navbar.html.twig' %}
    <div class="test-paper-container">
      <div id="app"></div>
      <input type="hidden" id="itemBankId" value="{{ questionBank.itemBankId }}">
      <input type="hidden" id="questionBankId" value="{{ questionBank.id }}">
      <input type="hidden" id="fixedTestPaperCreatePath" value="{{ path('question_bank_manage_testpaper_create', {id: questionBank.id}) }}">
      <input type="hidden" id="fixedAutoTestPaperCreatePath" value="{{ path('question_bank_manage_random_testpaper_create', {id: questionBank.id}) }}">
      <input type="hidden" id="ckeditor_path" value="{{ asset('static-dist/libs/es-ckeditor/ckeditor.js') }}">
      <input type="hidden" id="jquery_path" value="{{ asset('static-dist/libs/jquery/dist/jquery.min.js') }}">
      <input type="hidden" id="ckeditor_image_upload_url" value="{{ path('editor_upload', {token: upload_token('question')}) }}">
      <input type="hidden" id="ckeditor_image_download_url" value="{{ path('editor_download', {token: upload_token('question')}) }}">
      <input type="hidden" id="importUrl" value="{{ path('question_bank_manage_testpaper_import', {id: questionBank.id}) }}">
    </div>
  </div>
{% endblock %}
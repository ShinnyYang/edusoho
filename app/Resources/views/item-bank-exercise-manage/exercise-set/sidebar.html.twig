{% block side %}
  <div class="cd-sidebar locked js-sidenav">
    <ul class="cd-sidebar__list">
      <div class="js-sidenav-course-menu">
        {# 章节练习 #}
        <li class="cd-sidebar__item {% if course_side_nav == 'chapter' %}active{% endif %}">
            <a href="{{ path('item_bank_exercise_manage_chapter_exercise_list', {exerciseId:exercise.id}) }}">
              {{ 'item_bank_exercise.chapter_practice'|trans }}
            </a>
        </li>
        {# 试卷练习 #}
          <li class="cd-sidebar__item {% if course_side_nav == 'assessment' %}active{% endif %}">
              <a
                href="{{ path('item_bank_exercise_manage_assessment', {exerciseId:exercise.id}) }}">
                {{ 'item_bank_exercise.testpaper_practice'|trans }}
              </a>
          </li>
        <li class="cd-sidebar__heading">
          <hr class="mt0 mb0 mh10 bg-border-color"/>
        </li>
        {#基础设置#}
        <li class="cd-sidebar__item {% if course_side_nav == 'base' %}active{% endif %}">
          <a href="{{ path('item_bank_exercise_manage_base', {exerciseId:exercise.id,questionBankId: exercise.questionBankId}) }}">
            {{ 'course.plan_base_info'|trans }}
          </a>
        </li>
        {#营销设置#}
        <li class="cd-sidebar__item {% if course_side_nav == 'business' %}active{% endif %}">
            <a
              href="{{ path('item_bank_exercise_manage_marketing_info', {exerciseId:exercise.id}) }}">
              {{ 'course.marketing_setup'|trans }}
            </a>
        </li>
        {#学员管理#}
        <li class="cd-sidebar__item {% if course_side_nav == 'students' %}active{% endif %}">
          <a
            href="{{ path('item_bank_exercise_manage_students', {exerciseId:exercise.id}) }}">
            {{ 'course.student_manage'|trans }}
          </a>
        </li>
        {# 错题管理 #}
        <li class="cd-sidebar__item {% if course_side_nav == 'wrong_questions' %}active{% endif %}">
          <a
            href="{{ path('item_bank_exercise_manage_wrong_questions', {exerciseId:exercise.id}) }}">
            {{ '学员错题'|trans }}
          </a>
        </li>
        {# AI伴学服务 #}
        <li class="cd-sidebar__item {% if course_side_nav == 'ai-companion-study' %}active{% endif %}" style="position: relative">
          <div style="color: white; font-size: 12px; line-height: 16px; font-weight: 500; padding: 0 6px; background-color: #FF4D4F; border-radius: 6px 6px 6px 0; position: absolute; left: 105px; top: 5px">NEW</div>
          <a href="{{ path('item_bank_exercise_manage_ai_companion_study', {exerciseId:exercise.id}) }}">
            AI伴学服务
          </a>
        </li>
      </div>
    </ul>
  </div>
{% endblock %}

{% extends 'item-bank-exercise-manage/header.html.twig' %}

{% block coursesetImg %}
  <a href="{{ path('item_bank_exercise_manage_base', {exerciseId: item.id, questionBankId: item.questionBankId }) }}" target="_blank">
    <img class="courseset-manage-header__img" src="{{ filepath(item.cover.small|default(''), 'item_bank_exercise.png') }}" />
  </a>
{% endblock %}

{% block btn %}
  <a class="cd-btn cd-btn-ghost-primary cd-mr16" href="{{ path('item_bank_exercise_manage_base', {exerciseId: item.id, questionBankId: item.questionBankId }) }}" target="_blank">{{ 'item_bank_exercise.manage_btn'|trans }}</a>
  {% if item.status != 'published' %}
    <a class="cd-btn cd-btn-ghost-default" href="{{ path('item_bank_exercise_show', {id: item.id, previewAs:'guest'}) }}" target="_blank">{{ 'item_bank_exercise.preview.course'|trans }}</a>
  {% else %}
    <a class="cd-btn cd-btn-ghost-default" href="{{ path('item_bank_exercise_show', {id: item.id, previewAs:'guest'}) }}" target="_blank">{{'my.learning.item_bank_exercise.watch'|trans}}</a>
  {% endif %}
{% endblock %}

{% block coursesetTitle %}
  <a class="cd-link-major" href="{{ path('item_bank_exercise_manage_base', {exerciseId: item.id, questionBankId: item.questionBankId }) }}" target="_blank">{{ item.title }}</a>
{% endblock %}

{% block liveTag %}
{% endblock %}

<div class="visible-xs cd-mb24 clearfix">
  <div class="pull-right">
    {% if s2b2c_has_behaviour_permission('canAddCourse') and (has_permission('admin_v2_course_content_manage') or 'ROLE_TEACHER' in app.user.roles) %}{#S2B2C#}
      <a class="cd-btn cd-btn-primary" id="create-course" href="{{ path('course_set_manage_create', {default: filter}) }}" >{{ 'my.teaching.course_set.create'|trans }}</a>
    {% endif %}
  </div>
</div>
<div class="cd-mb24">
  <div class="pull-right hidden-xs">
    {% if s2b2c_has_behaviour_permission('canAddCourse') and isAddCourseShow|default(1) == 1 and (has_permission('admin_v2_course_content_manage') or 'ROLE_TEACHER' in app.user.roles) %}{#S2B2C#}
      <a class="cd-btn cd-btn-primary" id="create-course" href="{{ path('course_set_manage_create', {default: filter}) }}" >{{ 'my.teaching.course_set.create'|trans }}</a>
    {% endif %}
  </div>
  <ul class="courseset-type-list nav nav-pills">
    <li class="{% if filter == 'open' %}active{% endif %}"><a href="{{ path('my_teaching_open_courses', {filter:'open'}) }}">{{'my.teaching.open_course.normal'|trans}}</a></li>
    <li class="{% if filter == 'liveOpen' %}active{% endif %}"><a href="{{ path('my_teaching_open_courses', {filter:'liveOpen'}) }}">{{'my.teaching.open_course.live'|trans}}</a></li>
    {{ slot('my.teaching.open_course.menu', {'filter': filter}) }}
  </ul>
</div>


{% extends 'bootstrap-modal-layout.html.twig' %}

{% do script(['app/js/task/app-modal/index.js']) %}

{% set modal_class = 'cd-modal-dialog task-only-app-modal' %}

{% block title %}
  仅支持 APP 学习
{% endblock %}

{% block body %}
  <input type="hidden" name="courseId" value="{{ courseId }}">
  <div>
  <div class="modal-intro">
    <span>
      请下载 / 打开 
    </span>
    <span class="modal-app">APP</span>
    <span>后继续学习</span>
  </div>
  <div class="download-app">
    <div class="download-app-qrcode">
      <canvas class="qrcode-canvas"></canvas>
    </div>
  </div> 
  </div>
{% endblock %}

{% block footer %}
<div class="modal-guide flex justify-center items-center">
  <img class="mobile-wechat-qrcode" src="{{ asset('static-dist/app/img/task/wechat-qrcode.png') }}" alt="" />
  <div class="flex flex-col items-start ml8">
  <span>使用手机</span>
  <span>扫一扫</span>
  </div>
</div>
{% endblock %}
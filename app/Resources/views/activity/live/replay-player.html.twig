{% extends 'layout.html.twig' %}

{%- block title -%}
  {{'course.liveroom.content_title'|trans}}
{%- endblock -%}

{% block meta %}
  {{ parent() }}
{% endblock %}

{% do script(['app/js/liveroom/entry/index.js']) %}

{% block body %}
  <div id="entry"
       data-course-id="{{ courseId|default(0) }}"
       data-task-id="{{ taskId|default(0) }}"
       data-role="{{ role|default('') }}"
  >
    <iframe
      name="classroom"
      src="{{ path('task_live_replay_entry_player', {mediaId: mediaId, token: token}) }}"
      style="position:absolute; left:0; top:0; height:100%; width:100%; border:0px;"
      scrolling="no"
      allowfullscreen="true"
      allow="microphone; camera; screen-wake-lock"
    ></iframe>
  </div>
{% endblock %}